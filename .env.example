# ===========================================
# Google Maps Scraper - Environment Variables
# ===========================================
# Copy this file to .env and customize

# ===========================================
# Database Configuration
# ===========================================
POSTGRES_USER=gmaps
POSTGRES_PASSWORD=change_me_in_production
POSTGRES_DB=gmaps

# ===========================================
# Scraper Configuration
# ===========================================
# Number of concurrent browser tabs
CONCURRENCY=4

# How deep to scroll (more = more results, slower)
DEPTH=10

# Web UI port
WEB_PORT=8080

# ===========================================
# Optional: Proxy Configuration
# ===========================================
# Format: protocol://user:pass@host:port
# PROXIES=http://proxy1:8080,http://proxy2:8080

# ===========================================
# Optional: Email Extraction
# ===========================================
# EXTRACT_EMAIL=true

# ===========================================
# Optional: Language & Location
# ===========================================
# LANG=en
# GEO_COORDINATES=40.7128,-74.0060
# ZOOM=15
